@page "/learn"
@rendermode InteractiveServer

<PageTitle>Learn About Custom Instructions</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Learn About GitHub Copilot Custom Instructions</MudText>

<MudPaper Elevation="3" Class="pa-4 mt-6 mb-6" Style="max-width: 800px">
    <MudText Typo="Typo.body1" Class="mb-4">
        Custom instructions help you get more relevant suggestions from GitHub Copilot by providing context about your preferences and project needs.
    </MudText>
    
    <MudText Typo="Typo.h5" Class="mt-4">Benefits of Custom Instructions</MudText>
    
    <div class="d-flex align-center mb-2 mt-2">
        <MudIcon Icon="@Icons.Material.Filled.Check" Class="mr-2" />
        <MudText>More personalized code suggestions</MudText>
    </div>
    
    <div class="d-flex align-center mb-2">
        <MudIcon Icon="@Icons.Material.Filled.Check" Class="mr-2" />
        <MudText>Adherence to your coding style and standards</MudText>
    </div>
    
    <div class="d-flex align-center mb-2">
        <MudIcon Icon="@Icons.Material.Filled.Check" Class="mr-2" />
        <MudText>Improved context awareness for your specific project</MudText>
    </div>
    
    <div class="d-flex align-center mb-4">
        <MudIcon Icon="@Icons.Material.Filled.Check" Class="mr-2" />
        <MudText>Better technical accuracy in generated code</MudText>
    </div>
    
    <MudText Typo="Typo.h5" Class="mt-4">How to Use Custom Instructions</MudText>
    <MudText Typo="Typo.body1" Class="mb-4">
        Detailed guides and best practices for using custom instructions with GitHub Copilot will be available here soon.
    </MudText>
    
    <MudButton Variant="Variant.Filled" 
               Color="Color.Primary"
               Href="/"
               StartIcon="@Icons.Material.Filled.ArrowBack">
        Back to Home
    </MudButton>
</MudPaper>